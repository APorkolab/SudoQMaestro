# SudoQMaestro Production Environment Configuration
# Copy this file to .env.production and fill in the actual values
# IMPORTANT: Never commit actual .env files with secrets to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info

# Frontend URL (used for CORS and redirects)
FRONTEND_URL=https://your-domain.com

# Server Ports
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Root Credentials (for admin access)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_very_secure_root_password

# Application Database Configuration
MONGO_DB_NAME=sudoqmaestro
MONGO_USERNAME=sudoq_user
MONGO_PASSWORD=your_secure_db_password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# Admin API Key (generate with: openssl rand -base64 32)
ADMIN_KEY=your_admin_api_key_here

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Let's Encrypt configuration (if using certbot)
LETSENCRYPT_EMAIL=your_email@domain.com
LETSENCRYPT_DOMAINS=your-domain.com,www.your-domain.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Performance monitoring sample rate (0.0 to 1.0)
PERFORMANCE_SAMPLE_RATE=0.1

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup retention in days
BACKUP_RETENTION_DAYS=30

# AWS S3 Configuration (for backup storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-backup-bucket

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP settings for notifications
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@your-domain.com

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# API rate limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000

# Upload limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_FILES_PER_REQUEST=5

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis configuration
REDIS_PASSWORD=your_redis_password
REDIS_MAX_MEMORY=128mb

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Docker image tags
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest

# Container resource limits
BACKEND_CPU_LIMIT=1.0
BACKEND_MEMORY_LIMIT=1G
FRONTEND_CPU_LIMIT=0.5
FRONTEND_MEMORY_LIMIT=256M
MONGODB_CPU_LIMIT=2.0
MONGODB_MEMORY_LIMIT=2G

# =============================================================================
# DEVELOPMENT OVERRIDES (Only for staging/development)
# =============================================================================
# Uncomment these for non-production environments
# DEBUG=true
# DISABLE_AUTH=false
# MOCK_GOOGLE_AUTH=false
